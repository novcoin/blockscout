# /etc/nginx/sites-available/novcoin.io
# Reverse-proxy two sub-domains -> local ports
map $http_upgrade $connection_upgrade {
    default upgrade;
    ''      close;
}

##
#   node.novcoin.io  ->  http://localhost:8545
##
server {
    server_name node.novcoin.io;

    # Large JSON-RPC payloads
    client_max_body_size 64M;

    location / {
        proxy_pass http://localhost:8545;
        proxy_set_header Host              $host;
        proxy_set_header X-Real-IP         $remote_addr;
        proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # WebSocket upgrade (Geth/Nethermind sometimes expose WS on same port)
        proxy_http_version 1.1;
        proxy_set_header Upgrade    $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/node.novcoin.io/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/node.novcoin.io/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}

##
#   explorer.novcoin.io  ->  http://localhost:4040
##
server {
    server_name explorer.novcoin.io;

    location / {
        proxy_pass http://localhost;
        proxy_set_header Host              $host;
        proxy_set_header X-Real-IP         $remote_addr;
        proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/node.novcoin.io/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/node.novcoin.io/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}

server {
    if ($host = node.novcoin.io) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name node.novcoin.io;
    return 404; # managed by Certbot


}
server {
    if ($host = explorer.novcoin.io) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name explorer.novcoin.io;
    return 404; # managed by Certbot


}
